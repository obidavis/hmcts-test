{% from "govuk/components/task-list/macro.njk" import govukTaskList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}

{% block content %}
  <h1 class="govuk-heading-xl">Task Management</h1>

  <p class="govuk-body">This is a simple task management system.</p>

  {{ govukButton({
    text: "Create new task",
    href: "/tasks/create"
  }) }}

  {% if tasks | length == 0 %}
    <h2 class="govuk-heading-l">No tasks available</h2>
  {% else %}
    {{ govukTaskList({
      items: tasks
    }) }}
  {% endif %}
{% endblock %}
